---
import { Picture } from '@astrojs/image/components'

export interface Props {
	image: ImageMetadata;
	caption: string
}

const { 
	image,
    caption,
} = Astro.props as Props;
---

<figure>
    <Picture sizes="(max-width: 1440px) 100vw, 1440px" src={image} widths={[1440, 720, 360, 180]} alt={caption} format={'webp'} 
    class={`m-auto`} />
    <figcaption class="m-auto text-primary text-sm border-t-4 px-2 border-accent pb-2 pt-1 w-fit">{ caption }</figcaption>
</figure>