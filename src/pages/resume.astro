---
import Layout from '../layouts/Layout.astro';
import ExternalLink from '../components/ExternalLink.astro';
import Company from '../components/resume/Company.astro';
import Role from '../components/resume/Role.astro';
import Tag from '../components/resume/Tag.astro';
---

<Layout title="Resume" description="A resume of Joel Huggett">
  <main class="post-wrapper">
    <article>
      <div class="resume-wrapper">
        <h1>Joel Huggett</h1>
        <h2>2 years and 9 months of professional software engineering; 7+ years playing in code.</h2>
        <Company>
          <h2 class="company-title">Kanary</h2>
          <p style="text-align:center; font-size:1.125rem;">7 months</p>
          <p>May 2, 2022 - November 4, 2022</p>
          <p>
            Working on <ExternalLink href="https://www.thekanary.com/">Kanary</ExternalLink>,
            a SaaS product for identifying and removing public personal data exposures.
          </p>
          <ul class="resume-tags">
            <Tag>Typescript</Tag>
            <Tag>React</Tag>
            <Tag>Tailwind</Tag>
            <Tag>Django</Tag>
            <Tag>Python</Tag>
            <Tag>Go</Tag>
          </ul>
          <Role title="Software Engineer" started="May 2, 2022" />
        </Company>
        <Company>
          <h2 class="company-title">Forestry</h2>
          <p style="text-align:center; font-size:1.125rem;">2 years and 2 months</p>
          <p>January 6, 2020 - March 22, 2022</p>
          <p>
            Working on <ExternalLink href="https://tina.io/">Tina</ExternalLink>, a git backed CMS for static sites.
          </p>
          <ul class="resume-tags">
            <Tag>Typescript</Tag>
            <Tag>React</Tag>
            <Tag>Nextjs</Tag>
            <Tag>Express</Tag>
            <Tag>Node</Tag>
            <Tag>Go</Tag>
            <Tag>AWS Lambda</Tag>
            <Tag>AWS Kenisis</Tag>
          </ul>
          <Role title="Software Engineer II" started="Jan 21, 2022" />
          <Role title="Software Engineer I (Junior)" started="Jan 8, 2020" />
        </Company>
      </div>
    </article>
  </main>
</Layout>
