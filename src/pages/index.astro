---
import Layout from '../layouts/Layout.astro';
import { Image } from '@astrojs/image/components'

import { post as theForge } from './the-forge.astro'
import { post as theBeltKnife } from './the-belt-knife.astro'
import { post as agita } from './agita.astro'
import { post as makingCharcoal } from './making-charcoal.astro'
import { post as wroughtIronCandleHolder } from './wrought-iron-candle-holder.astro'

import { Post } from '../post';

const posts: Post[] = [
	wroughtIronCandleHolder,
	makingCharcoal,
	agita,
	theBeltKnife,
	theForge
]

const myName = 'Joel Huggett'
