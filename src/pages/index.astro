---
import Layout from '../layouts/Layout.astro';
import Touchmark from '../components/Touchmark.astro';
import SocialLinks from '../components/SocialLinks.astro';
---

<Layout title="Joel Huggett" description="About Joel Huggett.">
  <main>
    <div class="hero">
      <div class="hero-spacer"></div>

      <div class="hero-identity">
        <Touchmark class="touchmark-svg" transition:name="touchmark" />
        <h1>Joel Huggett</h1>
        <p class="hero-tagline">Blacksmith &bull; Software Engineer &bull; Woodwright</p>
        <nav class="hero-nav">
          <a href="/blog">Blog</a>
          <a href="/games">Games</a>
          <a href="/apps">Apps</a>
        </nav>
      </div>

      <footer class="hero-footer">
        <SocialLinks />
      </footer>
    </div>
  </main>
</Layout>

<style is:global>
  .touchmark-svg {
    width: 10rem;
  }
</style>
